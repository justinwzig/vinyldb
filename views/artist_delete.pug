extends layout

block content

  h1 #{title}: #{artist.name}
  p= artist.lifespan

  if artist_records.length

    p #[strong Delete the following records before attempting to delete this artist.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Records
      dl
        each record in artist_records
          dt
            a(href=record.url) #{record.title}
          dd #{record.summary}

  else
    p Do you really want to delete this Artist?

    form(method='POST')
      div.form-group
        input#artistid.form-control(type='hidden', name='artistid', value=artist._id )

      button.btn.btn-primary(type='submit') Delete
