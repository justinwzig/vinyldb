extends layout

block content

  h1 Delete Genre: #{genre.name}

  if genre_records.length

    p #[strong Delete the following records before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Records

      dl
        each record in genre_records
          dt
            a(href=record.url) #{record.title}
          dd #{record.summary}

  else
    p Do you really want to delete this Genre?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden', name='id', value=genre._id )

      button.btn.btn-primary(type='submit') Delete
