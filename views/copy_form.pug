extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='record') Record:
      select#record.form-control(name='record' required)
        option(value='') --Please select a record--
        for record in record_list
          if selected_record==record._id.toString()
            option(value=record._id, selected) #{record.title}
          else
            option(value=record._id) #{record.title}

    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text' placeholder='Publisher and date information' name='imprint' required value=(undefined===copy ? '' : copy.imprint) )
    div.form-group
      label(for='due_back') Date when record available:
      input#due_back.form-control(type='date' name='due_back' value=(undefined===copy ? '' : copy.due_back_yyyy_mm_dd))

    div.form-group
      label(for='status') Status:
      select#status.form-control(name='status' required)
        option(value='') --Please select a status--
        each val in ['Maintenance', 'Available', 'Loaned', 'Reserved']
          if undefined===copy || copy.status!=val
            option(value=val)= val
          else
            option(value=val selected)= val

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
