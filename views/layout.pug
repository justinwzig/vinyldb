doctype html
html(lang='en')
    head
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/stylesheets/style.css')
        link(rel='svg' href='/sprite/sprite.svg')
        //-script(src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous")
        script
            include ../public/javascripts/jquery-3.7.1.min.js
    body(class='dark')
        //-div(class="row is-center")
            block sidebar
                include /includes/nav.pug
        .wr1(class='row')
            svg(type="image/svg+xml" class="icon" aria-hidden="true")
                use(xlink:href="/sprite/sprite.svg#arrow_back")
            svg(type="image/svg+xml" class="icon" aria-hidden="true")
                use(xlink:href="/sprite/sprite.svg#arrow_forward")
            form.vscode-search#searchbar(action="/search" method="GET")
                div(class="vscode-search-div")
                    input(type="text" name="q" placeholder="Search..." class="vscode-search-field")
                div(class="vscode-search-button")
                    button(type="submit" class="vscode-search-submit")
        .wr2(class='row') wr2
            .bc2A(class='col-1 movecol') bc2A
            .handle1 h1
            .bc2B(class='col-2 movecol') bc2B
                .cr2B1(class='row') cr2B1
                .cr2B2(class='row') cr2B2
                .cr2B3(class='row') cr2B3
            .handle2 h2
            .bc2C(class='col-4 movecol') bc2C
                .cr2C1 .cr2C1
                .cr2C2 .cr2C2
                .cr2C3 .cr2C3
            .handle3 h3
            .bc2D(class='col-4 movecol') bc2D
                .cr2D1 .cr2D1
                .cr2D2 .cr2D2
                .cr2D3 .cr2D3
            .handle4 h4
            .flex-right flex-right
                .bc2E(class='col-1 movecol') bc2E
                    .cr2E1 .cr2E1


        .wr3(class='row') wr3
            .bc3A(class='col-2 movecol') bc3A
            .handle4 handle4
            .bc3A(class='col-2 movecol') bc3A

        .wr4(class='row') wr4

        .wr5(class='row') wr5



    div(class="row is-center")
        div(class="col-12 col-12-sm col-12-md")

        div(class="col-4")
            div(class="toc")
                ul
                    li
                        a(href="/catalog" ) Home
                    li
                        a(href="/releases") Releases
                        ul
                            li
                                a(href="/release-create") Create new release
                    li
                        a(href="/artists") Artists
                        ul
                            li
                                a(href="/artist-create") Create new artist
                    li
                        a(href="/genres") Genres
                        ul
                            li
                                a(href="/genre-create") Create new genre
                    li
                        a(href="/copies") Copies
                        ul
                            li
                                a(href="/copy-create") Create new copy
                svg(class="toc-marker" width="200" height="200" xmlns="http://www.w3.org/2000/svg")
                    path(stroke="#AAA" stroke-width="3" fill="transparent" stroke-dasharray="0, 0, 0, 1000" stroke-linecap="round" stroke-linejoin="round" transform="translate(-0.5, -0.5)")
        div(id="catalog")
        main(class='col-12 col-2-sm col-8-md')
            .breadcrumb-container
                ul.breadcrumbs.breadcrumbs_type5
                    li.breadcrumbs__item
                        a.breadcrumbs__element(href="#0") Home
                    li.breadcrumbs__item
                        a.breadcrumbs__element(href="#0") Copies
                    li.breadcrumbs__item.breadcrumbs__item_active
                        span.breadcrumbs__element Copy
            block content
        script

            include ../public/javascripts/accordion.js
        script
            include ../public/javascripts/flexresize.js
        script
            include ../public/javascripts/progressNav.js
        script
            include ../public/javascripts/menuNav.js
        div(class="row")
            footer(Class='col is-center')
                p(class='is-center') Copyright Â© 2024



