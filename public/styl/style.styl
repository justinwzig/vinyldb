    border-radius: 0;
}

nav {
    justify-content: center;
    box-sizing: border-box;
    border-style: solid;
    border-color: var(--yellow);
    display: inline-flex;
    position: relative;
    overflow: hidden;
    padding: 0 20px;
    max-width: 100%;
    background-color: var(--base03);
    border-radius: 40px;
}

nav {
    a {
        color: var(--base1);
        padding: 20px;
        text-decoration: none;
        transition: 0.3s;
        margin: 0 6px;
        z-index: 1;
        font-weight: 500;
        position: relative;

        &:before {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 0;
            width: 100%;
            height: 5px;
            background-color: var(--base2);
            border-radius: 8px 8px 0 0;
            opacity: 0;
            transition: 0.3s;
        }
    }

    :not(.active):hover:before {
        opacity: 1;
        bottom: 0;
    }

    :not(.active):hover {
        color: var(--base3);
    }
}

.nav-indicator {
    position: absolute;
    left: 0;
    bottom: 0;
    transition: 0.4s;
    height: 5px;
    z-index: 1;
    border-radius: 8px 8px 0 0;
}

@media (max-width: 580px) {
    .nav {
        overflow: auto;
    }
}

.row, .col-2 {
