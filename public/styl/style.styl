}

.box {
    box-sizing: border-box;
    flex: 1 1 auto;
    color: #fff;
    border-radius: 5px;
    padding: 20px;
    font-size: 150%;
}

[class*='handle'] {
    width: 5px;
    padding: 0;
    cursor: col-resize;
    flex: 0 0 auto;
    z-index: 100;
}

.handler:hover {
    cursor: col-resize;
}

.handler::before {
    content: '';
    display: block;
    width: 4px;
    height: 100%;
    background: red;
    margin: 0 auto;
}

