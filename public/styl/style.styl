:root
  --base03: rgb(15, 5, 0);
  --base02: rgb(36, 18, 0);
  --base01: #586e75;
  --base00: #657b83;
  --base0: #839496;
  --base1: #93a1a1;
  --base2: #eee8d5;
  --base3: #fdf6e3;
  --yellow: #b58900;
  --orange: #cb4b16;
  --red: #dc322f;
  --magenta: #d33682;
  --violet: #6c71c4;
  --blue: #268bd2;
  --cyan: #2aa198;
  --green: #859900;
  --menu-width: 14em;
  --menuPaddingLeft: 3em;
  --breadcrumbsTextColor: var(--base1);
  --breadcrumbsTextColorActive: var(--base3);
  --breadcrumbsDivider: "›";
  --breadcrumbsDividerColor: var(--base2);
  --breadcrumbsDividerSize: 20px;
  --breadcrumbsIndent: 8px;




h1, h2, h3, h4, h5, h6, p, div
    margin: 0
    padding: 0


body
  font-family: 'Roboto', sans-serif;
  color: var(--base2);


body.dark
  background-color: base01
  color: var(--base2)


/* Main container styling */
main,
footer
  /*border-color: var(--yellow);
  border-width: 2px;
  border-style: solid;*/
  margin: 20px;
  padding: 20px;
  border-radius: 0;


nav
  justify-content: center;
  box-sizing: border-box;
  border-style: solid;
  border-color: var(--yellow);
  display: inline-flex;
  position: relative;
  overflow: hidden;
  padding: 0 20px;
  max-width: 100%;
  background-color: var(--base03);
  border-radius: 40px;


nav
  a
    color: var(--base1);
    padding: 20px;
    text-decoration: none;
    transition: 0.3s;
    margin: 0 6px;
    z-index: 1;
    font-weight: 500;
    position: relative;

    &:before
      content: "";
      position: absolute;
      bottom: -6px;
      left: 0;
      width: 100%;
      height: 5px;
      background-color: var(--base2);
      border-radius: 8px 8px 0 0;
      opacity: 0;
      transition: 0.3s;



  :not(.active):hover:before
    opacity: 1;
    bottom: 0;


  :not(.active):hover
    color: var(--base3);


.nav-indicator
  position: absolute;
  left: 0;
  bottom: 0;
  transition: 0.4s;
  height: 5px;
  z-index: 1;
  border-radius: 8px 8px 0 0;



@media (max-width: 580px)
  .nav
    overflow: auto;



.row, .col-2
    flex: nowrap


.box
    box-sizing: border-box
    flex: 1 1 auto
    color: #fff

    border-radius: 5px;
    padding: 20px;
    font-size: 150%;

[class*="handle"]
  width: 5px;
  padding: 0;
  cursor: col-resize
  flex: 0 0 auto;
  z-index: 100;

.handler:hover
    cursor: col-resize



.handler::before
  content: '';
  display: block;
  width: 4px;
  height: 100%;
  background: red;
  margin: 0 auto;








h5
  color: #fff;


a


a:hover


.toc


  width: var(--menu-width);
  line-height: 2;

  ul
    list-style: none;
    padding: 0;
    margin: 0;


  ul ul
    padding-left: 2em;


  li a
    display: inline-block;
    color: #aaa;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.230, 1.000, 0.320, 1.000);


  li.visible>a
    color: var(--base3);
    transform: translate(5px);



.toc-marker
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  color: var(--base3);

  path
    transition: all 0.3s ease;




.accordion
    width: 100%
    margin: auto
    padding: 0

.accordion h1, h2, h3, h4
    cursor: pointer

.accordion h2, h3, h4

.accordion h1
    padding: 15px 20px
    background-color: #333
    font-size: 1.5rem
    font-weight: normal
    color: #1abc9c

.accordion h1:hover
    color: #4afcdc

.accordion h1:first-child
    border-radius: 10px 10px 0 0

.accordion h1:last-of-type
    border-radius: 0 0 10px 10px

.accordion h1:not(:last-of-type)
    border-bottom: 1px dotted #1abc9c

.accordion div, .accordion p
    display: none

.accordion h2
    padding: 5px 25px
    background-color: #1abc9c
    font-size: 1.1rem
    color: #333

.accordion h2:hover
    background-color: #09ab8b

.accordion h3
    padding: 5px 30px
    background-color: #b94152
    font-size: 0.9rem
    color: #ddd

.accordion h3:hover
    background-color: #a93142

.accordion h4
    padding: 5px 35px
    background-color: #ffc25a
    font-size: 0.9rem
    color: #af720a

.accordion h4:hover
    background-color: #e0b040

.accordion p
    padding: 15px 35px
    background-color: #ddd
    font-family: 'Georgia'
    font-size: 0.8rem
    color: #333
    line-height: 1.3rem

.accordion .open
    display: block


